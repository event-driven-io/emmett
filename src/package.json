{
  "name": "@event-driven-io/core",
  "type": "module",
  "version": "0.43.0-alpha.5",
  "description": "Emmett - Event Sourcing development made simple",
  "engines": {
    "node": ">=24.12.0"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "onFail": "error"
    },
    "packageManager": {
      "name": "npm",
      "onFail": "error"
    }
  },
  "private": true,
  "scripts": {
    "setup": "cat .nvmrc | nvm install; nvm use",
    "build": "run-s build:ts build:emmett build:esdb build:mongodb build:postgresql build:sqlite build:expressjs build:honojs build:fastify build:testcontainers build:tests",
    "build:ts": "tsc -b",
    "build:ts:clean": "tsc --build --clean",
    "build:ts:watch": "tsc -b --watch",
    "build:emmett": "npm run build -w packages/emmett",
    "build:esdb": "npm run build -w packages/emmett-esdb",
    "build:mongodb": "npm run build -w packages/emmett-mongodb",
    "build:postgresql": "npm run build -w packages/emmett-postgresql",
    "build:sqlite": "npm run build -w packages/emmett-sqlite",
    "build:expressjs": "npm run build -w packages/emmett-expressjs",
    "build:honojs": "npm run build -w packages/emmett-honojs",
    "build:fastify": "npm run build -w packages/emmett-fastify",
    "build:testcontainers": "npm run build -w packages/emmett-testcontainers",
    "build:tests": "npm run build -w packages/emmett-tests",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:prettier": "prettier --check \"**/**/!(*.d).{ts,json,md}\"",
    "lint:eslint": "eslint '**/*.ts'",
    "fix": "run-s fix:eslint fix:prettier",
    "fix:prettier": "prettier --write \"**/**/!(*.d).{ts,json,md}\"",
    "fix:eslint": "eslint '**/*.ts' --fix",
    "test": "run-s test:unit test:int test:e2e",
    "test:unit": "glob-bin -d -c \"node --import tsx --test\" --ignore './packages/emmett-sqlite/**' **/*.unit.spec.ts && vitest run \".unit.spec\"",
    "test:int": "glob-bin -d -c \"node --import tsx --test\" --ignore './packages/emmett-sqlite/**' **/*.int.spec.ts && vitest run \".int.spec\"",
    "test:e2e": "glob-bin -d -c \"node --import tsx --test\" --ignore './packages/emmett-sqlite/**' **/*.e2e.spec.ts && vitest run \".e2e.spec\"",
    "test:watch": "run-p test:unit:watch test:int:watch test:e2e:watch",
    "test:unit:watch": "glob-bin -d -c \"node --import tsx --test --watch\" --ignore './packages/emmett-sqlite/**' **/*.unit.spec.ts",
    "test:int:watch": "glob-bin -d -c \"node --import tsx --test --watch\" --ignore './packages/emmett-sqlite/**' **/*.int.spec.ts",
    "test:e2e:watch": "glob-bin -d -c \"node --import tsx --test --watch\" --ignore './packages/emmett-sqlite/**' **/*.e2e.spec.ts",
    "test:file": "node --preserve-symlinks --import tsx --test",
    "test:file:watch": "node --preserve-symlinks --import tsx --test --watch",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "test:vitest": "vitest run",
    "test:vitest:watch": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/event-driven-io/emmett.git"
  },
  "keywords": [
    "Event Sourcing"
  ],
  "author": "Oskar Dudycz",
  "bugs": {
    "url": "https://github.com/event-driven-io/emmett/issues"
  },
  "homepage": "https://event-driven-io.github.io/emmett/",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260115.0",
    "@faker-js/faker": "^10.2.0",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/browser": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "glob-bin": "^1.0.0",
    "miniflare": "^4.20260124.0",
    "npm-run-all2": "^8.0.4",
    "playwright": "^1.58.0",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "@event-driven-io/pongo": "0.17.0-beta.20",
    "@types/express": "4.17.21",
    "@types/node": "^25.0.10",
    "@types/supertest": "^6.0.2",
    "supertest": "7.2.2"
  },
  "workspaces": [
    "packages/emmett",
    "packages/emmett-postgresql",
    "packages/emmett-mongodb",
    "packages/emmett-esdb",
    "packages/emmett-expressjs",
    "packages/emmett-honojs",
    "packages/emmett-sqlite",
    "packages/emmett-testcontainers",
    "packages/emmett-fastify",
    "packages/emmett-tests"
  ],
  "dependencies": {
    "@testcontainers/mongodb": "^11.11.0",
    "@testcontainers/postgresql": "^11.11.0",
    "@types/benchmark": "^2.1.5",
    "benchmark": "^2.1.4",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3"
  }
}
